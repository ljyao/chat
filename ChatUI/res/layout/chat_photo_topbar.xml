<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部标题栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comm_topbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ic_actionbar_bg" >

    <Button
        android:id="@+id/topbar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_chat_photo_selector_back_arrow"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="6dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:text="@string/main_back"
        android:textColor="@drawable/ic_chat_back_textcolor"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/topbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="16"
        android:textSize="20sp" />

    <Button
        android:id="@+id/topbar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingBottom="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@drawable/ic_chat_back_textcolor"
        android:textSize="18sp"
        android:visibility="invisible" />
</RelativeLayout>